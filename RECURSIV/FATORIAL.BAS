0010 ' CALCULA O FATORIAL DE UM NUMERO
0020 ' MANOEL NETO - 2024-1-4
0030 CLS:WIDTH 40:KEY OFF:DEFINT A-Z
0040 NM=0:C=1:VA=0
0050 INPUT "Entre um numero:";NM
0060 DIM NS(NM)
0070 GOSUB 1000:'FATORIAL RECURSIVO
0080 GOSUB 2000:'MULTIPLICA FATORES
0080 END 

1000 ' FATORIAL RECURSIVO
1010 IF NM = 1 THEN PRINT NM:RETURN
1020 VA=NM*NM-1
1030 NS(C)=VA
1040 C=C+1
1050 PRINT VA
1060 NM=NM-1
1070 GOSUB 1000:'RECURSAO

2000 ' MULTIPILCA OS FATORES
2010 FOR I = NM TO 2 STEP -1
2020    VT=NS(I)*NS(I-1)
2030 NEXT I 
2040 PRINT "FATORIAL=";VT